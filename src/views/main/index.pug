extends ./../layout/index

block content
    div.col-xs-12.col-md-12
        h1 Express.js + Passport.js
    div(class="col-xs-12 col-md-12")
        if (user)
            a(href="/auth/logout") Logout
    div(class="col-xs-12 col-md-12")
        if (user)        
            h2 Hello #{user.name}, ou are logged in
        else
            h2 Please log in
            a(href="/auth") Click here